  "main": "./npm-root/index.js",
  "types": "./npm-root/index.d.ts",
  "keywords": [
    "gearbox"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Gearbox-protocol/integrations-v3"
  },
  "files": [
    "contracts"
  ],
  "license": "BUSL-1.1",
  "scripts": {
